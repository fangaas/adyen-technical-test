body {
    margin: 0px;
    padding: 0px;
    background-color: #b1b1b1;
}

#app {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    width: 100%;
    height: 100vh;
    top: 0;
    left: 0;
    padding: 30px 20px;
}

.content {
    width: 100%;
    max-width: 500px;
    height: auto;
    z-index: 10;
}

.bg {
    z-index: 0;
    opacity: 0;
    transition: opacity 0.5s;
    background-size: cover;
    width: 100%;
    height: 100%;
    position: absolute;
    display: block;
    top: 0;
    left: 0;
    
    &__amsterdam {
        background-image: url('assets/img/amsterdam-bg.jpg');
    }
    
    &__madrid {
        background-image: url('assets/img/madrid-bg.jpg');
    }
    
    &__budapest {
        background-image: url('assets/img/budapest-bg.jpg');
    }
    
    &--active {
        opacity: 1;
    }
}

.intro {
    width: 100%;
    margin-bottom: 20px;
}

$c-white = #FFF;
$c-black = #000;
$c-box-grey = #C3BFBF;
$c-box-light-grey = #E2E2E2;
$c-transparent = #0000;

@require('_resets');
@require('_typography');
@require('components/*');
@require('mixins/*');
