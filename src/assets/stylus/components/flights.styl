.flights-container {
    width: 100%;
    overflow: hidden;
    transition: opacity 0.3s;
    opacity: 0;
    
    &--open {
        opacity: 1;
    }
}

.flights {
    &__header {
        width: 100%;
        padding: 20px;
        text-align: center;
    }
    
    &__loading {
        text-align: center;
        opacity: 0;
    }
    
    &__list {
        width: 100%;
    }
    
    &__flight {
        width: 100%;
        background-color: $c-white;
        padding: 20px;
        height: 65px;
        margin-bottom: 10px;
        display: flex;
        align-items: center;
        opacity: 0;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        cursor: default;
        
        span:nth-child(1) {
            font-size: 16px;
        }
        
        span:nth-child(2) {
            font-size: 13px;   
        }
        
        span:nth-child(3) {
            font-size: 9px;
        }
    }
}