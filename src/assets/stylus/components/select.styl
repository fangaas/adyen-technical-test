.select {
    display: flex;
    flex-direction: row;
    position: relative;
    width: 100%;
    min-height: 50px;
    background-color: $c-white;
    margin-bottom: 10px;
    padding: 8px;
    
    &__loc {
        height: 75px;
        padding: 0px;
        background-color: $c-transparent;
    }
    
    &__loc-box {
        flex-grow: 1;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        cursor: pointer;
        transition: all 0.2s;
        background-color: $c-white;
        outline: 0;
        
        &:not(:last-child) {
            margin-right: 10px;
        }
        
        &--active {
            background-color: $c-box-grey;
        }
        
        &:not(.select__loc-box--active):hover {
            background-color: $c-box-light-grey;
        }
    }
    
    &__date-container {
        width: 100%
        display: flex;
        flex-wrap: wrap;
    }
    
    &__date-box,
    &__ret-box {
        width: 30%;
        padding: 20px;
        margin: 7px;
        background-color: $c-box-grey;
        text-align: center;
        cursor: pointer;
        opacity: 0.5;
        transition: opacity 0.2s;
        outline: 0;
        
        &--active {
            opacity: 1;
        }
    }
    
    &__date-box {
        padding: 10px;

        &:not(.select__date-box--active):hover {
            opacity: 0.8;
        }
    }
    
    &__ret-box {
        width: 50%;
        padding: 20px;
        margin: 7px;
        
        &:not(.select__ret-box--active):hover {
            opacity: 0.8;
        }
    }
    
    &__search {
        background-color: #0000;
        padding-bottom: 0px;
        justify-content: center;
    }
    
    &__search-btn {
        background-color: $c-white;
        text-align: center;
        padding: 15px 55px;
        outline: 0;
    }
    
    &__date,
    &__ret,
    &__search-btn {
        pointer-events: none;
        opacity: 0.2;
        transition: opacity 0.2s;
        
        &--active {
            pointer-events: all;
            opacity: 1;
        }
    }
}